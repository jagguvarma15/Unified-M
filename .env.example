# Unified-M Environment Variables
# ================================
# Copy to .env and fill in values.
# NEVER commit .env to version control.

# ── API Auth (optional) ─────────────────────────────────────────────
# Set API_AUTH_TOKEN to enable bearer-token auth on the serving API.
# Leave empty to disable auth (fine for local dev).
API_AUTH_TOKEN=

# ── Redis (optional) ────────────────────────────────────────────────
# Used for API response caching. Falls back to in-memory if unset.
REDIS_URL=redis://localhost:6379/0

# ── Ad Platform Connectors ──────────────────────────────────────────

# Google Ads
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=

# Meta (Facebook) Ads
META_APP_ID=
META_APP_SECRET=
META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=

# TikTok Ads
TIKTOK_ACCESS_TOKEN=
TIKTOK_ADVERTISER_ID=

# Amazon Ads
AMAZON_ADS_CLIENT_ID=
AMAZON_ADS_CLIENT_SECRET=
AMAZON_ADS_REFRESH_TOKEN=
AMAZON_ADS_PROFILE_ID=

# ── External Data ───────────────────────────────────────────────────

# FRED (Federal Reserve Economic Data) -- free at https://fred.stlouisfed.org/docs/api/
FRED_API_KEY=

# ── Cloud Storage (optional, for cloud deployment) ──────────────────

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=

# GCP
GOOGLE_APPLICATION_CREDENTIALS=
GCS_BUCKET=

# Azure
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER=

# ── Database Connectors (optional) ──────────────────────────────────
POSTGRES_URL=
BIGQUERY_PROJECT=
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_DATABASE=
SNOWFLAKE_WAREHOUSE=
